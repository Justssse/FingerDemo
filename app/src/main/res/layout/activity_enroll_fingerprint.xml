<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnrollFingerprintActivity">

    <TextView
        android:id="@+id/tv_enroll_fingerprint_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/enroll_fingerprint_title"
        android:textSize="16sp"
        android:gravity="center"/>

    <ProgressBar
        android:id="@+id/pro_enroll_fingerprint_progress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tv_enroll_fingerprint_hint"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

    <Button
        android:id="@+id/btn_touch_sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/pro_enroll_fingerprint_progress"
        android:layout_marginTop="40dp"
        android:text="@string/touch_sensor"/>

</RelativeLayout>